
@{
    ViewData["Title"] = "Index";
}
@model List<Product>
<h1>Products</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Stock</th>
        </tr>        
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <th scope="row">@product.Id</th>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Stock</td>
            </tr>        
        }
    </tbody>
</table>